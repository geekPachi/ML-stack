import pandas as pd
import re

# Create a sample dataframe with text data and N/A values
data = {
    'ID': [1, 2, 3, 4, 5],
    'Text': ['Hello!', 'This is some text.', 'N/A', 'Special @#&* characters!', 'Another text.']
}
df = pd.DataFrame(data)

# Drop rows with N/A values
df = df.dropna()

# Remove special characters from the 'Text' column
df['Text'] = df['Text'].apply(lambda x: re.sub('[^A-Za-z0-9\s]+', '', x))

print(df)
