# the below code checks the skewness in each column of a dataset

if skew == zero, 
     Then its good to go
elif skew>zero
     then positive skewness
else 
     negetive skewness



from scipy.stats import skew
import matplotlib.pyplot as plt
import seaborn as sns

for col in df_num:
    print(col)
    print(skew(df_num[col]))

    plt.figure()
    sns.distplot(df_num[col])
    plt.show()



 # logarithemic transformation code
import numpy as np
import matplotlib.pyplot as plt

# Assuming you have a numerical column named 'data_column'
data = df['data_column']

# Apply logarithmic transformation
transformed_data = np.log(data)

# Plot original and transformed data
plt.figure(figsize=(10, 4))
plt.subplot(1, 2, 1)
plt.hist(data, bins=20)
plt.title('Original Data')
plt.xlabel('Values')
plt.ylabel('Frequency')

plt.subplot(1, 2, 2)
plt.hist(transformed_data, bins=20)
plt.title('Logarithmic Transformation')
plt.xlabel('Transformed Values')
plt.ylabel('Frequency')

plt.tight_layout()
plt.show()

