# skew data removal using box- cox transformation


import numpy as np
from scipy import stats
import matplotlib.pyplot as plt

# Assuming you have a numerical column named 'data_column'
data = df['data_column']

# Apply Box-Cox transformation
transformed_data, lambda_val = stats.boxcox(data)

# Plot original and transformed data
plt.figure(figsize=(10, 4))
plt.subplot(1, 2, 1)
plt.hist(data, bins=20)
plt.title('Original Data')
plt.xlabel('Values')
plt.ylabel('Frequency')

plt.subplot(1, 2, 2)
plt.hist(transformed_data, bins=20)
plt.title('Box-Cox Transformation')
plt.xlabel('Transformed Values')
plt.ylabel('Frequency')

plt.tight_layout()
plt.show()

# Print the lambda value used for the transformation
print("Lambda value:", lambda_val)

