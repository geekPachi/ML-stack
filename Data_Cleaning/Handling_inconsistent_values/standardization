# Apply standardscaler to scale the value within a range

import pandas as pd
from sklearn.preprocessing import StandardScaler

# Load the dataset
df = pd.read_csv('dataset.csv')

# Extract the columns to be standardized
features_to_standardize = ['Age', 'Income']
data_to_standardize = df[features_to_standardize]

# Perform standardization
scaler = StandardScaler()
standardized_data = scaler.fit_transform(data_to_standardize)

# Create a new DataFrame with standardized features
df_standardized = pd.DataFrame(standardized_data, columns=features_to_standardize)

# Concatenate the standardized features with the remaining columns
df_final = pd.concat([df_standardized, df.drop(features_to_standardize, axis=1)], axis=1)

# Save the updated dataset
df_final.to_csv('standardized_dataset.csv', index=False)

